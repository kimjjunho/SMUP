<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMUP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="boxStrokeColor">@color/black</item> // Focus 상태일때 밑줄 색.
        <item name="helperTextTextColor">@color/black</item>
    </style>
    <style name="EditTextGreyStyle" parent="Widget.Design.TextInputLayout">

        <item name="colorControlNormal">@color/black</item>  // unFocus 상태일때 밑줄 색.
        <item name="boxStrokeColor">@color/black</item> // Focus 상태일때 밑줄 색.
        <item name="android:textCursorDrawable">@color/black</item>  // cursor 색.

        <item name="android:textColorHint">@color/black</item>  // hint 색
        <item name="hintTextColor">@color/black</item>   // floating hint 색
        <item name="helperTextTextColor">@color/black</item>
        <item name="errorTextColor">@color/black</item>
    </style>
</resources>